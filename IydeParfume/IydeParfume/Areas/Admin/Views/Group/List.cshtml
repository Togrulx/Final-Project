@using IydeParfume.Areas.Admin.ViewModels.Group
@model List<ListViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-controller="group" asp-action="add" class="btn btn-secondary">Add new Group</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Groups</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Group Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var nav in Model)
                        {
                            <tr>
                                <td>@nav.Title</td>
                                <td class="text-end">
                                    <form method="POST" asp-route="admin-group-delete" asp-route-id="@nav.Id" id="book-form-@nav.Id"></form>
                                    <button style="background-color:none; border:none;" type="submit" form="book-form-@nav.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>