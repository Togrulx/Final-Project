@using IydeParfume.Areas.Admin.ViewModels.AboutUsImage
@model AboutUsImageViewModel

<div>
    <div class="row">
        <div class="col-sm-12">
            <div class="page-title-box">
                <div class="float-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-route="admin-aboutUs-list">About Us </a>
                        </li><!--end nav-item-->
                        
                    </ol>
                </div>
                <h4 class="page-title">AboutUs Images</h4>
            </div><!--end page-title-box-->
        </div><!--end col-->
    </div>
</div>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-aboutUsImage-add" asp-route-aboutUsId="@Model.AboutUsId" class="btn btn-secondary">Add new About File</a>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var blogFile in Model.Files!)
                        {
                            <tr>
                                <td><img src="~/@blogFile.FileUrl" width="20%" /></td>

                                <td>@blogFile.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">

                                    <form method="POST" asp-route="admin-aboutUsImage-delete" asp-route-aboutUsId="@Model.AboutUsId" asp-route-aboutUsFileId="@blogFile.Id" id="book-image-form-@blogFile.Id"></form>
                                    <button type="submit" form="book-image-form-@blogFile.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>