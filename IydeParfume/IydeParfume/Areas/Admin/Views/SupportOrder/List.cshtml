@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using IydeParfume.Areas.Admin.ViewModels.SupportOrder
@model List<SupportOrderViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-SupportOrder-add" class="btn btn-secondary">Add new Support Order</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th> Content</th>
                            <th>Created at</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bookImage in Model)
                        {
                            <tr>
                                <td>@bookImage.Title</td>
                                <td>@bookImage.Content</td>
                                <td>@bookImage.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td class="text-end">
                                    <form method="POST" asp-route="admin-SupportOrder-delete" asp-route-id="@bookImage.Id" id="book-image-form-@bookImage.Id"></form>
                                    <button type="submit" form="book-image-form-@bookImage.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>