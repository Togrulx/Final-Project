@using IydeParfume.Areas.Admin.ViewModels.SubNavbar
@model List<ListItemViewModel>

<div class="col-lg-12">
    <div class="row justify-content-end">
        <div class="">
            <a asp-route="admin-subnavbar-add" target="_blank" class="btn btn-secondary">Add new SubNavbar</a>
        </div>
    </div>
</div>
<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">SubNavbars</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Order</th>
                            <th>Navbar</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subNavbar in Model)
                        {
                            <tr>
                                <td>@subNavbar.Name</td>
                                <td>@subNavbar.Order</td>
                                <td>@subNavbar.Navbar</td>
                                <td>@subNavbar.CreatedAt</td>
                                <td>@subNavbar.UpdatedAt</td>
                                <td class="text-end">
                                    <a asp-route="admin-subnavbar-update" asp-route-Id="@subNavbar.Id"><i class="las la-pen text-secondary font-16"></i></a>
                                    <form method="POST" asp-route="admin-subnavbar-delete" asp-route-id="@subNavbar.Id" id="book-form-@subNavbar.Id"></form>
                                    <button type="submit" form="book-form-@subNavbar.Id">
                                        <i class="las la-trash-alt text-secondary font-16"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>