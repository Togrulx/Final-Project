                                                @await Component.InvokeAsync(nameof(ShopPagePrice))


                                            </div>
                                            <div class="search-area groups">
                                                <h2>Qruplar</h2>
                                                <input class="form-control" id="myInput" type="text" placeholder="Qrup axtar">
                                                <ul class="list-group" id="myList">
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Accua Di Parma <span>(100)</span></a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Adidas <span>(100)</span></a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Agent Provocateur <span>(100)</span></a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Agonist <span>(100)</span></a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Agonist <span>(100)</span></a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Agonist</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Agonist</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="search-area season">
                                                <h2>Ətrin Fəslini Seçin</h2>
                                                <ul class="list-group" id="myList">
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">payız/qış</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">yaz/yay</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="search-area time">
                                                <h2>Ətrin Vurulma Vaxtı</h2>
                                                <ul class="list-group" id="myList">
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Gündüz Ətri</a>
                                                    </li>
                                                    <li class="list-group-item">
                                                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                        <a href="">Gecə Ətri</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Products Header End -->
            </div>

            <!-- Filter -->
            <div class="col-lg-3">
                <div class="products-filter">
                   
                    <div class="search-area brands">
                        <h2>Brendlər</h2>
                       
                            @await Component.InvokeAsync(nameof(ShopPageBrand))

                         
                    </div>
                    <div class="search-area category">
