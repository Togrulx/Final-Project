                        <h2>Qruplar</h2>
                        @await Component.InvokeAsync(nameof(ShopPageGroup))

                    </div>
                    <div class="search-area season">
                        <h2>Ətrin Fəslini Seçin</h2>
                        @await Component.InvokeAsync(nameof(ShopPageSeason))

                      
                    </div>
                    <div class="search-area time">
                        <h2>Ətrin Vurulma Vaxtı</h2>
                        @await Component.InvokeAsync(nameof(ShopPageUsageTime))

                    </div>
                </div>
            </div>
            <!-- Filter End -->
            <!-- Products -->
            <div class="col-lg-9">
                <div class="cards d-flex fustify-content-evenly">
                    <div class="row filtered-area">
                        @await Component.InvokeAsync(nameof(ShopPageProduct), new { searchBy = ViewBag.SearchBy, search = ViewBag.Search , categoryId =  ViewBag.CategoryId , startPriceId = ViewBag.StartPriceId })

                      
                       
                    </div>

                </div>
            </div>
            <!-- Products End -->

        </div>
    </div>
